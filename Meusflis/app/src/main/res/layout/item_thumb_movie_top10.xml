<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="140dp"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">

    <androidx.cardview.widget.CardView
        android:layout_width="115dp"
        android:layout_height="match_parent"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true"
        android:layout_alignParentEnd="true"
        app:cardBackgroundColor="#37000000"
        app:cardElevation="0dp">
        
        <ImageView
            android:id="@+id/imageThumbMovieTop10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="#37000000"
            android:scaleType="centerCrop"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="#23B1B1B1"
            android:scaleType="fitXY"/>

    </androidx.cardview.widget.CardView>

    <com.iambedant.text.OutlineTextView
        android:id="@+id/tvTop10"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:maxLines="1"
        android:paddingStart="-45dp"
        android:paddingEnd="0dp"
        android:layout_marginBottom="-23dp"
        android:gravity="center"
        android:fontFamily="@font/tommy"
        android:textColor="@color/black"
        android:textSize="120sp"
        app:outlineColor="#F1F1F1"
        app:outlineWidth="2"/>

    <View
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="@drawable/bg_left_shadow"/>

</RelativeLayout>
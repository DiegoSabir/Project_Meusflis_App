<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="@dimen/paddings">

    <TextView
        android:id="@+id/tvPopular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tvPopular"
        android:textColor="@android:color/black"
        android:textSize="@dimen/textViewsTitles"
        android:textStyle="bold"/>
    
    <ViewFlipper
        android:id="@+id/vfCarousel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/viewFlipperHeight"/>

    <TextView
        android:id="@+id/tvCatalogue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tvCatalogue"
        android:textColor="@android:color/black"
        android:textSize="@dimen/textViewsTitles"
        android:textStyle="bold"/>

    <androidx.appcompat.widget.SearchView
        android:id="@+id/svSearchMultimediaContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:iconifiedByDefault="false"
        app:queryHint="Search Title"/>

    <LinearLayout
        android:id="@+id/llSpinners"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSpinnerGenre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tvSpinnerGenre"
            android:textSize="@dimen/llSpinnersTextViews"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/spGenre"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/spinnersHeight"/>

        <TextView
            android:id="@+id/tvSpinnerCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tvSpinnerCategory"
            android:textSize="@dimen/llSpinnersTextViews"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/spDemographicCategories"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/spinnersHeight"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCatalogue"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
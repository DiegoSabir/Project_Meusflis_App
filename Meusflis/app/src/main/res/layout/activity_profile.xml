<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/lavender"
    tools:context=".activity.ProfileActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/loginCardView_layoutMargin"
        app:cardCornerRadius="@dimen/loginCardView_cardCornerRadius"
        app:cardElevation="@dimen/loginCardView_cardElevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/loginPadding"
            android:background="@drawable/borders">

            <EditText
                android:id="@+id/etEmailProfile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/loginEt_layoutHeight"
                android:drawableStart="@drawable/baseline_email_24"
                android:drawablePadding="@dimen/loginEt_drawablePadding"
                android:hint="@string/etEmailProfile"
                android:textColor="@color/black"
                android:background="@drawable/borders"
                android:padding="@dimen/loginEt_padding"/>

            <EditText
                android:id="@+id/etPasswordProfile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/loginEt_layoutHeight"
                android:layout_marginTop="@dimen/loginEt_layoutMarginTop"
                android:drawableStart="@drawable/baseline_lock_24"
                android:drawablePadding="@dimen/loginEt_drawablePadding"
                android:hint="@string/etPasswordProfile"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:background="@drawable/borders"
                android:padding="@dimen/loginEt_padding"/>

            <EditText
                android:id="@+id/etNameProfile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/loginEt_layoutHeight"
                android:layout_marginTop="@dimen/loginEt_layoutMarginTop"
                android:drawableStart="@drawable/baseline_person_24"
                android:drawablePadding="@dimen/loginEt_drawablePadding"
                android:hint="@string/etNameProfile"
                android:textColor="@color/black"
                android:background="@drawable/borders"
                android:padding="@dimen/loginEt_padding"/>

            <EditText
                android:id="@+id/etTelephoneProfile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/loginEt_layoutHeight"
                android:layout_marginTop="@dimen/loginEt_layoutMarginTop"
                android:drawableStart="@drawable/baseline_smartphone_24"
                android:drawablePadding="@dimen/loginEt_drawablePadding"
                android:hint="@string/etTelephoneProfile"
                android:textColor="@color/black"
                android:background="@drawable/borders"
                android:padding="@dimen/loginEt_padding"/>

            <EditText
                android:id="@+id/etCardProfile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/loginEt_layoutHeight"
                android:layout_marginTop="@dimen/loginEt_layoutMarginTop"
                android:drawableStart="@drawable/baseline_credit_card_24"
                android:drawablePadding="@dimen/loginEt_drawablePadding"
                android:hint="@string/etCardProfile"
                android:textColor="@color/black"
                android:background="@drawable/borders"
                android:padding="@dimen/loginEt_padding"/>

            <Button
                android:id="@+id/btnSaveChangesProfile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/loginBtn_layoutHeight"
                android:layout_marginTop="@dimen/loginBtn_layoutMarginTop"
                android:text="@string/btnSaveChangesProfile"
                android:textSize="@dimen/loginBtn_textSize"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btnBackCatalogueFromProfile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/loginBtn_layoutHeight"
                android:layout_marginTop="@dimen/loginBtn_layoutMarginTop"
                android:text="@string/btnBackCatalogueFromProfile"
                android:textSize="@dimen/loginBtn_textSize"
                android:layout_gravity="center_horizontal"
                android:visibility="visible"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
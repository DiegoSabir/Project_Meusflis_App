<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/account_icon"
        android:transitionName="splash_text"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:id="@+id/llProfileData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etEmailProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:padding="20dp"
            android:inputType="text"/>

        <EditText
            android:id="@+id/etPasswordProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Password"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:padding="20dp"
            android:inputType="text"/>

        <EditText
            android:id="@+id/etNameProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Name"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:padding="20dp"
            android:inputType="textCapWords"/>

        <EditText
            android:id="@+id/etTelephoneProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Telephone"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:padding="20dp"
            android:inputType="text"/>

        <EditText
            android:id="@+id/etCardProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Card"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:padding="20dp"
            android:inputType="textCapCharacters"/>

        <Button
            android:id="@+id/btnSaveChangesProfile"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:text="SAVE CHANGES"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btnBackProfile"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:text="BACK"
            android:layout_gravity="center_horizontal"
            android:visibility="visible"/>

    </LinearLayout>

</LinearLayout>

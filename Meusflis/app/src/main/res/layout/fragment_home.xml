                                android:layout_height="160dp"
                                android:layout_weight="1"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="15dp"
                                android:adjustViewBounds="true"
                                app:riv_corner_radius="12dp"
                                android:scaleType="centerCrop"
                                android:src="@color/colorDeCarga"/>

                            <com.makeramen.roundedimageview.RoundedImageView
                                android:layout_width="match_parent"
                                android:layout_height="160dp"
                                android:layout_weight="1"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="15dp"
                                android:adjustViewBounds="true"
                                app:riv_corner_radius="12dp"
                                android:scaleType="centerCrop"
                                android:src="@color/colorDeCarga"/>

                            <com.makeramen.roundedimageview.RoundedImageView
                                android:layout_width="match_parent"
                                android:layout_height="160dp"
                                android:layout_weight="1"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="15dp"
                                android:adjustViewBounds="true"
                                app:riv_corner_radius="12dp"
                                android:scaleType="centerCrop"
                                android:src="@color/colorDeCarga"/>

                        </LinearLayout>

                    </LinearLayout>

                </com.facebook.shimmer.ShimmerFrameLayout>

                <LinearLayout
                    android:id="@+id/linearTop10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/raleway_semibold"
                        android:text="Las 9 peliculas mas populares"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvTop10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:paddingHorizontal="10dp"
                        tools:listitem="@layout/item_thumb_movie_top10"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:orientation="horizontal"
                        tools:itemCount="10"/>

                </LinearLayout>

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmer_home_comedia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="15dp"
                            android:background="@color/colorDeCarga"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3"
                            android:paddingEnd="15dp"
                            android:paddingStart="0dp"
                            android:paddingBottom="15dp">

                            <com.makeramen.roundedimageview.RoundedImageView
                                android:layout_width="match_parent"
                                android:layout_height="160dp"
                                android:layout_weight="1"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="15dp"
                                android:adjustViewBounds="true"
                                app:riv_corner_radius="12dp"
                                android:scaleType="centerCrop"
                                android:src="@color/colorDeCarga"/>

                            <com.makeramen.roundedimageview.RoundedImageView
                                android:layout_width="match_parent"
                                android:layout_height="160dp"
                                android:layout_weight="1"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="15dp"
                                android:adjustViewBounds="true"
                                app:riv_corner_radius="12dp"
                                android:scaleType="centerCrop"
                                android:src="@color/colorDeCarga"/>

                            <com.makeramen.roundedimageview.RoundedImageView
                                android:layout_width="match_parent"
                                android:layout_height="160dp"
                                android:layout_weight="1"
                                android:layout_marginStart="15dp"

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/background"
    tools:context=".activity.CatalogueActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/catalogueTitle_layoutMarginStart"
            android:text="@string/tvRecommended"
            android:textSize="@dimen/catalogueTvTitleSize"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:textColor="@color/lavender"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/catalogueCardView_layoutHeight"
            android:layout_marginEnd="@dimen/catalogueCardView_layoutMarginEnd"
            android:layout_marginStart="@dimen/catalogueCardView_layoutMarginStart"
            app:cardBackgroundColor="@color/lavender"
            app:cardElevation="@dimen/catalogueCardView_cardElevation"
            app:cardCornerRadius="@dimen/catalogueCardView_cardCornerRadius">

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/isTopMultimediaContent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/imageSlider_layoutHeight"
                app:iss_period="1000"
                app:iss_auto_cycle="true"
                app:iss_delay="1000"
                app:iss_corner_radius="20"
                app:iss_title_background="@drawable/gradient">

            </com.denzcoskun.imageslider.ImageSlider>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/svSearchMultimediaContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/searchView_layoutMarginTop"
            app:iconifiedByDefault="false"
            app:queryHint="@string/svSearchMultimediaContent"/>

        <ListView
            android:id="@+id/lvCatalogue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/listView_layoutMarginTop"/>

    </LinearLayout>

</LinearLayout>

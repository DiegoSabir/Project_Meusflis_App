<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/lavender"
    tools:context=".activity.SignUpActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/loginCardView_layoutMargin"
        app:cardCornerRadius="@dimen/loginCardView_cardCornerRadius"
        app:cardElevation="@dimen/loginCardView_cardElevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/loginPadding"
            android:background="@drawable/borders">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tvTitleForgetActivity"
                android:textSize="@dimen/loginTvTitleSize"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/lavender"/>

            <EditText
                android:id="@+id/etForgetEmail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/loginEt_layoutHeight"
                android:layout_marginTop="@dimen/loginEt_layoutMarginTop"
                android:drawableStart="@drawable/baseline_email_24"
                android:drawablePadding="@dimen/loginEt_drawablePadding"
                android:hint="@string/etForgetEmail"
                android:textColor="@color/black"
                android:inputType="textEmailAddress"
                android:background="@drawable/borders"
                android:padding="@dimen/loginEt_padding"/>

            <Button
                android:id="@+id/btnSend"
                android:layout_width="match_parent"
                android:layout_height="@dimen/loginBtn_layoutHeight"
                android:layout_marginTop="@dimen/loginBtn_layoutMarginTop"
                app:cornerRadius = "@dimen/loginBtn_cornerRadius"
                android:text="@string/btnSend"
                android:textSize="@dimen/loginBtn_textSize" />

            <TextView
                android:id="@+id/tvLoginRedirect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/loginTvSignUp_layoutMarginTop"
                android:text="@string/tvLoginRedirect"
                android:textSize="@dimen/loginTvSignUp_textSize"
                android:textColor="@color/lavender"
                android:textStyle="bold"
                android:padding="@dimen/loginTvSignUp_padding"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>